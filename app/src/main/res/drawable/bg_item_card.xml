<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Saat ditekan -->
    <item android:state_pressed="true">
        <color android:color="#FFE0B2"/> <!-- Warna oranye terang saat ditekan -->
    </item>

    <!-- Saat dipilih (opsional) -->
    <item android:state_selected="true">
        <color android:color="#FFF3E0"/> <!-- Warna lebih terang saat dipilih -->
    </item>

    <!-- Default -->
    <item>
        <color android:color="#FFFFFF"/> <!-- Warna default putih -->
    </item>

</selector>
