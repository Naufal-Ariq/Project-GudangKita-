<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <!-- ConstraintLayout ini membuat item bisa diklik dengan efek ripple -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- Indikator Warna Status di sisi kiri -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/status_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Judul Tugas / ID Pesanan -->
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/status_indicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Picking Pesanan #ORD-001" />

        <!-- Chip Status (Diproses, Menunggu, dll) -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/chip_bg_yellow"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textColor="@color/chip_text_yellow"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_order_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_id"
            tools:text="Diproses" />

        <!-- Tujuan Pengiriman -->
        <TextView
            android:id="@+id/tv_tujuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray_600"
            app:layout_constraintEnd_toEndOf="@+id/tv_order_id"
            app:layout_constraintStart_toStartOf="@+id/tv_order_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"
            tools:text="Tujuan: Toko Jaya Abadi" />

        <!-- Jumlah Jenis Barang -->
        <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/gray_600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_tujuan"
            app:layout_constraintStart_toStartOf="@+id/tv_tujuan"
            app:layout_constraintTop_toBottomOf="@+id/tv_tujuan"
            tools:text="3 Jenis Barang" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
