<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_log_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Log Icon" />

    <TextView
        android:id="@+id/tv_log_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Deskripsi aktivitas log"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_log_icon"
        app:layout_constraintTop_toTopOf="@id/iv_log_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_log_icon"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
